@model HomeViewModel
<!-- End Header -->
<!-- ======= Hero Section ======= -->

<section id="hero" class="d-flex align-items-center">
    <div class="container" data-aos="zoom-out" data-aos-delay="100">
        @foreach (HomeHero item in Model.homeHeroes)
        {
            <h1>@Html.Raw(item.Title)</h1>
            <h2>@item.SubTitle</h2>
            <div class="d-flex">
                <a href="@item.ButtonLink" class="btn-get-started scrollto">Get Started</a>
                <a href="@item.VideoLink" class="glightbox btn-watch-video"><i class="bi bi-play-circle"></i><span>Watch Video</span></a>
            </div>
        }
    </div>
</section><!-- End Hero -->

<main id="main">
    @foreach (SectionHeader headitem in Model.sectionHeaders)
    {
        <section id="featured-services" class="featured-services">
            <div class="container" data-aos="fade-up">

                <div class="row">
                    @foreach (Services item in Model.services)
                    {
                        if (item.Id <= 4)
                        {
                            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0">
                                <div class="icon-box" data-aos="fade-up" data-aos-delay="100">
                                    <div class="icon"><i class="bx @item.Icon"></i></div>
                                    <h4 class="title"><a href="">@item.Title</a></h4>
                                    <p class="description">@item.Description</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            break;
                        }
                    }
                </div>

            </div>
        </section>

        <!-- End Featured Services Section -->
        <!-- ======= About Section ======= -->
        <section id="about" class="about section-bg">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    @Html.Raw(headitem.AboutHead)
                </div>
                <div class="row">
                    @foreach (About item in Model.abouts)
                    {
                        <div class="col-lg-6" data-aos="fade-right" data-aos-delay="100">
                            <img src="~/assets/img/@item.Image" class="img-fluid" alt="">
                        </div>
                        <div class="col-lg-6 pt-4 pt-lg-0 content d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="100">
                            <h3>@item.Title</h3>
                            <p class="fst-italic">
                                @item.Text
                            </p>
                            <ul>
                                @foreach (AboutList item2 in Model.aboutlists)
                                {
                                    <li>
                                        <i class="bx @item2.Icon"></i>
                                        <div>
                                            <h5>@item2.Name</h5>
                                            <p>@item2.Text</p>
                                        </div>
                                    </li>
                                }
                            </ul>
                            <p>
                                @item.FootText
                            </p>
                        </div>

                    }
                </div>

            </div>
        </section>

        <!-- End About Section -->
        <!-- ======= Skills Section ======= -->
        <section id="skills" class="skills">
            <div class="container" data-aos="fade-up">

                <div class="row skills-content">
                    @foreach (Skills item in Model.skills)
                    {
                        if (item.Id <= Model.skills.LongCount() / 2)
                        {
                            <div class="col-lg-6">
                                <div class="progress">
                                    <span class="skill">@item.Name <i class="val">@item.Value%</i></span>
                                    <div class="progress-bar-wrap">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-6">
                                <div class="progress">
                                    <span class="skill">@item.Name <i class="val">@item.Value%</i></span>
                                    <div class="progress-bar-wrap">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

            </div>
        </section>

        <!-- End Skills Section -->
        <!-- ======= Counts Section ======= -->
        <section id="counts" class="counts">
            <div class="container" data-aos="fade-up">

                <div class="row">
                    @foreach (Counters item in Model.counters)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="count-box">
                                <i class="bi @item.Icon"></i>
                                <span data-purecounter-start="0" data-purecounter-end="@item.Count" data-purecounter-duration="1" class="purecounter"></span>
                                <p>@item.Text</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- End Counts Section -->
        <!-- ======= Clients Section ======= -->
        <section id="clients" class="clients section-bg">
            <div class="container" data-aos="zoom-in">

                <div class="row">
                    @foreach (Client item in Model.clients)
                    {
                        <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                            <img src="~/assets/img/clients/@item.Image" class="img-fluid" alt="">
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- End Clients Section -->
        <!-- ======= Services Section ======= -->
        <section id="services" class="services">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    @Html.Raw(headitem.ServiceHead)
                </div>

                <div class="row">
                    @foreach (Services item in Model.services)
                    {
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                            <div class="icon-box">
                                <div class="icon"><i class="bx @item.Icon"></i></div>
                                <h4><a href="">@item.Title</a></h4>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- End Services Section -->
        <!-- ======= Testimonials Section ======= -->
        <section id="testimonials" class="testimonials">
            <div class="container" data-aos="zoom-in">

                <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="100">
                    <div class="swiper-wrapper">

                        @foreach (Testimonials item in Model.testimonials)
                        {
                            <div class="swiper-slide">
                                <div class="testimonial-item">
                                    <img src="~/assets/img/testimonials/@item.Image" class="testimonial-img" alt="">
                                    <h3>@item.Name</h3>
                                    <h4>@item.Work</h4>
                                    <p>
                                        <i class="bx bxs-quote-alt-left quote-icon-left"></i>
                                        @item.Text
                                        <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="swiper-pagination"></div>
                </div>

            </div>
        </section>

        <!-- End Testimonials Section -->
        <!-- ======= Portfolio Section ======= -->
        <section id="portfolio" class="portfolio">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    @Html.Raw(headitem.PortfolioHead)
                </div>

                <div class="row" data-aos="fade-up" data-aos-delay="100">
                    <div class="col-lg-12 d-flex justify-content-center">
                        <ul id="portfolio-flters">
                            @foreach (Categories item in Model.categories)
                            {
                                if (item.Id <= 1)
                                {
                                    <li data-filter="@item.FilterName" class="filter-active">@item.Name</li>
                                }
                                else
                                {
                                    <li data-filter="@item.FilterName" class="">@item.Name</li>
                                }
                            }
                        </ul>
                    </div>
                </div>

                <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
                    @foreach (Product item in Model.products)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-item @item.FilterName">
                            <img src="~/assets/img/portfolio/@item.Image" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@item.Name</h4>
                                <p>@item.Name</p>
                                <a href="~/assets/img/portfolio/@item.TextNum" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="App 1"><i class="bx bx-plus"></i></a>
                                <a href="@item.DetailsLink" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </section>

        <!-- End Portfolio Section -->
        <!-- ======= Team Section ======= -->
        <section id="team" class="team section-bg">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    @Html.Raw(headitem.TeamHead)
                </div>

                <div class="row">
                    @foreach (Team item in Model.teams)
                    {
                        <div class="col-lg-3 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                            <div class="member">
                                <div class="member-img">
                                    <img src="~/assets/img/team/@item.Image" class="img-fluid" alt="">
                                    <div class="social">
                                        <a href="@item.TwitterLink"><i class="bi bi-twitter"></i></a>
                                        <a href="@item.FacebookLink"><i class="bi bi-facebook"></i></a>
                                        <a href="@item.InstagramLink"><i class="bi bi-instagram"></i></a>
                                        <a href="@item.LinkedinLink"><i class="bi bi-linkedin"></i></a>
                                    </div>
                                </div>
                                <div class="member-info">
                                    <h4>@item.FullName</h4>
                                    <span>@item.Work</span>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </section>

        <!-- End Team Section -->
        <!-- ======= Pricing Section ======= -->
        <section id="pricing" class="pricing">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    @Html.Raw(headitem.PricingHead)
                </div>

                <div class="row">
                    @foreach (Pricing item in Model.pricings)
                    {
                        <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                            <div class="box">
                                <h3>@item.Status</h3>
                                <h4><sup>$</sup>@item.Price<span> / month</span></h4>
                                <ul>
                                    @Html.Raw(item.Description)
                                </ul>
                                <div class="btn-wrap">
                                    <a href="@item.BuyLink" class="btn-buy">Buy Now</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </section>

        <!-- End Pricing Section -->
        <!-- ======= Frequently Asked Questions Section ======= -->
        <section id="faq" class="faq section-bg">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    @Html.Raw(headitem.FaqHead)
                </div>

                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <ul class="faq-list">
                            @foreach (FAQ item in Model.faqs)
                            {
                                <li>
                                    <div data-bs-toggle="collapse" class="collapsed question" href="#faq1">@item.Faq<i class="bi bi-chevron-down icon-show"></i><i class="bi bi-chevron-up icon-close"></i></div>
                                    <div id="faq1" class="collapse" data-bs-parent=".faq-list">
                                        <p>
                                            @item.SubText
                                        </p>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

            </div>
        </section>

        <!-- End Frequently Asked Questions Section -->
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    @Html.Raw(headitem.ContactHead)
                </div>

                <div class="row" data-aos="fade-up" data-aos-delay="100">
                    @foreach (ContactHead item in Model.contacthead)
                    {
                        <div class="@item.GridColText">
                            <div class="info-box mb-4">
                                <i class="bx @item.Icon"></i>
                                <h3>@item.Local</h3>
                                <p>@item.LocalInfo</p>
                            </div>
                        </div>
                    }
                </div>

                <div class="row" data-aos="fade-up" data-aos-delay="100">

                    <div class="col-lg-6 ">
                        <iframe class="mb-4 mb-lg-0" src="@headitem.IFrameLink" frameborder="0" style="border:0; width: 100%; height: 384px;" allowfullscreen></iframe>
                    </div>

                    <div class="col-lg-6">
                        <form action="/Home/Contact" method="post" role="form" class="php-email-form">
                            <div class="row">
                                <div class="col form-group">
                                    <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" required>
                                </div>
                                <div class="col form-group">
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="message" rows="5" placeholder="Message" required></textarea>
                            </div>
                            <div class="my-3">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Your message has been sent. Thank you!</div>
                            </div>
                            <div class="text-center"><button type="submit">Send Message</button></div>
                        </form>
                    </div>

                </div>

            </div>
        </section>

        <!-- End Contact Section -->
    }
    <!-- ======= Featured Services Section ======= -->

</main><!-- End #main -->
<!-- ======= Footer ======= -->
